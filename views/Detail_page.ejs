<html>
    <head>
        <title>Detail_page</title>
        <% include ./partials/wiki_header %>
    </head>
    <style>
        /* 편집하기 & 블록체인 버튼 관련 */
        .detail_head_frame {
            width: 100%;
            height: 50px;
            /* border: 1px solid blue; */
        }
        .detail_head_btn_frame {
            width: 40%;
            height: 100%;
            margin: 0 15% 0;
            text-align: right;
            float:right;
            /* border: 1px solid orange; */
        }
        .detail_btn1 {
            position: inline-block;
            width: 20%;
            height: 100%;
            float: right;
            margin-left: 2%;
            font-size: 1em;
            text-align: center;
            background-color: transparent;
            /* border:1px transparent; */
        }
        .detail_btn2 {
            position: inline-block;
            width: 20%;
            height: 100%;
            float: right;
            margin-top: -2.9%;
            margin-left: 2%;
            font-size: 1em;
            text-align: center;
            background-color: transparent;
            /* border:1px transparent; */
        }
        /* 글의 상세 내용 스타일 */
        .detail_frame{
            width: 100%;
            min-height: 200px;
            max-height: auto;

            /* border: 1px solid black; */
        }
        .detail_block_frame{
            width: 70%;
            height: 100%;
            margin: 1% 15% 0;
            border: 1px solid rgb(204, 203, 203);
            background-color: white;
        }
        .detail_title_frame{
            width: 100%;
            height: 5%;
            font-size: 1.5em;
            margin: 2% 2% 0;
        }
        .detail_content_frame{
            position: inline-block;
            width: 97%;
            height: 100%;
            margin: 0 2% 0;
        }
    </style>
    <body>
        <div class="detail_head_frame"> 
            <div class="detail_head_btn_frame">
                <form type="get" action="/WikiHome/Detail/blockchain" name="Detail_blockchain">
                    <input type="submit" name="detail_block_btn" value="블록체인" class="detail_btn1">
                </form>
                <form type="get" action="/WikiHome/Edit_Detail" name="Detail_Edit_form" charset="EUC-KR">
                    <!-- <input type="submit" name="DetailEdit" value="편집하기" class="detail_btn2"> -->
                    <button type="submit" name="title" value="<%=rows[0].title%>" class="detail_btn2" >편집하기</button>
                </form>
            </div>
        </div>

        <div class="detail_frame">
            <div class="detail_block_frame">
                <!-- 글의 상세페이지 내용 -->
                <div class="detail_title_frame">
                    <!-- 글의 제목 -->
                    <%=rows[0].title%>
                </div>
                <hr width="70%" style="border: 1px solid rgb(204, 203, 203); margin: 0 1% 2%;">
                <div class="detail_content_frame">
                    <!-- 글의 내용 -->
                    <%=rows[0].content%>
                </div>
            </div>
        </div>
    </body>
</html>